{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "jsx": "preserve",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./src/utils/types.ts"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
